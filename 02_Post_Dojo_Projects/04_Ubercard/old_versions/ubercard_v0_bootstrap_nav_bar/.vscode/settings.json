{
    // I want my default to be 4, but JavaScript/JSON to be 2
    "editor.tabSize": 2,
    "[javascript]": {
      "editor.tabSize": 2
    },
    "[json]": {
      "editor.tabSize": 2
    },
  
    // This one forces the tab to be **space**
    "editor.insertSpaces": true,
    "diffEditor.ignoreTrimWhitespace": false,
    "files.trimTrailingWhitespace": true
  }